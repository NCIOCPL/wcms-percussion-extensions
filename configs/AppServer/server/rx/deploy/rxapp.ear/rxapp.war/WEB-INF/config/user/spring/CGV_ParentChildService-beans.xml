			<property name="name" value="PagesConfig"/>
			<!--
			<property name="childTypes">
				<list>
					<value>test</value>
				</list>
			</property> 	
			<property name="parentTypes">
				<list>
					<value>test</value>
				</list>
			</property> 
			-->
			<property name="relationshipNames">
				<list>
					<value>Pages</value>
				</list>
			</property>
			<property name="maxUp" value="1"/>
			<property name="maxDown" value="1"/>
			<property name="wfFollow" value="1"/>
		</bean>

		<bean id="CDEConfig"  class="gov.cancer.wcm.util.CGV_RelationshipConfig">
			<!--  If types are not defined then all types will be used -->
			
			<property name="name" value="CDEConfig"/>
			<!--

			<property name="childTypes">
				<list>
					<value>test</value>
				</list>
			</property> 	
			<property name="parentTypes">
				<list>
					<value>test</value>
				</list>
			</property> 
			-->
			<property name="relationshipNames">
				<list>
					<value>CDE</value>
				</list>
			</property>
			<property name="parentRels">
				<list>
					<value>Pages</value>
				</list>
			</property>
			<property name="childRels">
				<list>
					<value>List</value>
				</list>
			</property>
			<property name="maxUp" value="1"/>
			<property name="maxDown" value="1"/>
			<property name="wfFollow" value="1"/>

		</bean>

	  
	 

		
	  <bean id="CGV_RelationshipHandlerService" class="gov.cancer.wcm.extensions.CGV_RelationshipHandlerService">
	  	<property name="configs">
	  		<list>
				<ref local="PagesConfig"/>
				<ref local="CDEConfig"/>
	  		</list>
	  	</property>
		<property name="transitionMappings">
			<map>
				<entry key="Draft">
					<bean class="gov.cancer.wcm.util.CGV_TransitionDestination">
						<property name="validChildStates">
							<list>
								<value>Draft</value>
								<value>Staging</value>
								<value>Review</value>
								
								<value>Public</value>
								<value>Editing</value>
								<value>Restaging</value>
								<value>Reapproval</value>
								<value>ArchiveApproval</value>
								<value>Archived</value>
							</list>
						</property>
						<property name="autoTransitionNames">
							<list>
								<value>backToDraft</value>
								<value>Disapprove</value>
							</list>
						</property>
					</bean>
				</entry>
				<entry key="Staging">
					<bean class="gov.cancer.wcm.util.CGV_TransitionDestination">
						<property name="validChildStates">
							<list>
								<value>Draft</value>
								<value>Staging</value>
								
								<value>Public</value>
								<value>Editing</value>
								<value>Restaging</value>
								<value>Reapproval</value>
								<value>ArchiveApproval</value>
								<value>Archived</value>
							</list>
						</property>
						<property name="autoTransitionNames">
							<list>
								<value>Staging</value>
							</list>
						</property>
					</bean>
				</entry>
				<entry key="Review">
					<bean class="gov.cancer.wcm.util.CGV_TransitionDestination">
						<property name="validChildStates">
							<list>
								<value>Draft</value>
								<value>Staging</value>
								<value>Review</value>
								<value>Public</value>
								
								<value>Editing</value>
								<value>Restaging</value>
								<value>Reapproval</value>
								<value>ArchiveApproval</value>
								<value>Archived</value>
							</list>
						</property>
						<property name="autoTransitionNames">
							<list>
								<value>submitForReview</value>
								<value>Submit</value>
							</list>
						</property>
					</bean>
				</entry>
				<entry key="Public">
					<bean class="gov.cancer.wcm.util.CGV_TransitionDestination">
						<property name="validChildStates">
							<list>
								<value>Public</value>
								<value>Archived</value>
								<value>Review</value>
								<value>Reapproval</value>
								<value>ArchiveApproval</value>
								
								<value>Editing</value>
								<value>Restaging</value>
								<value>Archived</value>
							</list>
						</property>
						<property name="autoTransitionNames">
							<list>
								<value>Republish</value>
								<value>ForcetoPublic</value>
								<value>Reapprove</value>
								<value>DisapproveArchive</value>
							</list>
						</property>
					</bean>
				</entry>
				<entry key="Editing">
					<bean class="gov.cancer.wcm.util.CGV_TransitionDestination">
						<property name="validChildStates">
							<list>
								<value>Editing</value>
								<value>Public</value>
								<value>Draft</value>
								<value>Restaging</value>
								<value>Archived</value>
								<value>Review</value>
								<value>Staging</value>
								
								<value>Reapproval</value>
								<value>ArchiveApproval</value>
								<value>Archived</value>
							</list>
						</property>
						<property name="autoTransitionNames">
							<list>
								<value>Quick Edit</value>
								<value>Disapprove</value>
								<value>noApproval</value>
								<value>Revise</value>
								<value>backToDraft</value>
							</list>
						</property>
					</bean>
				</entry>
				<entry key="Restaging">
					<bean class="gov.cancer.wcm.util.CGV_TransitionDestination">
						<property name="validChildStates">
							<list>
								<value>Restaging</value>
								<value>Editing</value>
								<value>Draft</value>
								<value>Staging</value>
								
								<value>Reapproval</value>
								<value>ArchiveApproval</value>
								<value>Archived</value>
							</list>
						</property>
						<property name="autoTransitionNames">
							<list>
								<value>Preview</value>
								<value>Staging</value>
							</list>
						</property>
					</bean>
				</entry>
				<entry key="Reapproval">
					<bean class="gov.cancer.wcm.util.CGV_TransitionDestination">
						<property name="validChildStates">
							<list>
								<value>Editing</value>
								<value>Restaging</value>
								<value>Reapproval</value>
								<value>Review</value>
								<value>Staging</value>
								<value>Draft</value>
								
								<value>ArchiveApproval</value>
								<value>Archive</value>
							</list>
						</property>
						<property name="autoTransitionNames">
							<list>
								<value>Resubmit</value>
								<value>Resubmit for Review</value>
								<value>Submit</value>
								<value>submitForReview</value>
							</list>
						</property>
					</bean>
				</entry>
				<entry key="ArchiveApproval">
					<bean class="gov.cancer.wcm.util.CGV_TransitionDestination">
						<property name="validChildStates">
							<list>
								<value>ArchiveApproval</value>
								<value>Public</value>
								
								<value>Archived</value>
							</list>
						</property>
						<property name="autoTransitionNames">
							<list>
								<value>RequestArchive</value>
							</list>
						</property>
					</bean>
				</entry>
				<entry key="Archived">
					<bean class="gov.cancer.wcm.util.CGV_TransitionDestination">
						<property name="validChildStates">
							<list>
								<value>Archived</value>
								<value>ArchiveApproval</value>
							</list>
						</property>
						<property name="autoTransitionNames">
							<list>
								<value>ApproveArchive</value>
							</list>
						</property>
					</bean>
				</entry>
			</map>
		</property>
	  </bean>
      <bean id="CGV_ParentChildService" class="gov.cancer.wcm.extensions.CGV_ParentChildService">
        <property name="transition">
			<map>
				<entry key="CancerGov Workflow">
					<map>
						<entry key="3">
							<map>
								<entry key="fromState" value="Draft" />
								<entry key="toState" value="Review" />
								<entry key="trigger" value="Submit" />
							</map>
						</entry>
						<entry key="14">
							<map>
								<entry key="fromState" value="Review" />
								<entry key="toState" value="Draft" />
								<entry key="trigger" value="Disapprove" />
							</map>
						</entry>
						<entry key="28">
							<map>
								<entry key="fromState" value="Review" />
								<entry key="toState" value="Pending" />
								<entry key="trigger" value="Approve" />
							</map>
						</entry>
						<entry key="29">
							<map>
								<entry key="fromState" value="Pending" />
								<entry key="toState" value="Review" />
								<entry key="trigger" value="backToReview" />
							</map>
						</entry>
						<entry key="30">
							<map>
								<entry key="fromState" value="Pending" />
								<entry key="toState" value="Public" />
								<entry key="trigger" value="ForcetoPublic" />
							</map>
						</entry>
						<entry key="9">
							<map>
								<entry key="fromState" value="Public" />
								<entry key="toState" value="Editing" />
								<entry key="trigger" value="Quick Edit" />
							</map>
						</entry>
						<entry key="15">
							<map>
								<entry key="fromState" value="Reapproval" />
								<entry key="toState" value="Public" />
								<entry key="trigger" value="Reapprove" />
							</map>
						</entry>
						<entry key="20">
							<map>
								<entry key="fromState" value="ArchiveApproval" />
								<entry key="toState" value="Public" />
								<entry key="trigger" value="DisapproveArchive" />
							</map>
						</entry>
						<entry key="12">
							<map>
								<entry key="fromState" value="Archived" />
								<entry key="toState" value="Public" />
								<entry key="trigger" value="Republish" />
							</map>
						</entry>
						<entry key="11">
							<map>
								<entry key="fromState" value="Editing" />
								<entry key="toState" value="Reapproval" />
								<entry key="trigger" value="Resubmit" />
							</map>
						</entry>
						<entry key="16">
							<map>
								<entry key="fromState" value="Reapproval" />
								<entry key="toState" value="Editing" />
								<entry key="trigger" value="Disapprove" />
							</map>
						</entry>
						<entry key="21">
							<map>
								<entry key="fromState" value="Archived" />
								<entry key="toState" value="Editing" />
								<entry key="trigger" value="Revise" />
							</map>
						</entry>
						<entry key="8">
							<map>
								<entry key="fromState" value="Public" />
								<entry key="toState" value="ArchiveApproval" />
								<entry key="trigger" value="RequestArchive" />
							</map>
						</entry>
						<entry key="19">
							<map>
								<entry key="fromState" value="ArchiveApproval" />
								<entry key="toState" value="Archived" />
								<entry key="trigger" value="ApproveArchive" />
							</map>
						</entry>
					</map>
				</entry>
			</map>          
       </property> 
    </bean> 
</beans>
