      <bean id="psoWFActionService" class="com.percussion.pso.workflow.PSOWFActionService"
      init-method="init">
        <property name="transitionActions">
          <map>
              <entry key="CancerGov Workflow">
                  <map>
                     <entry key="Preview">
                         <list>
				<value>CGV_OnDemandPublishContent</value>
				<value>sys_TouchParentItems</value>
                            <value>CGV_ParentChild</value>
                         </list>
                     </entry> 
                     <entry key="Staging">
                         <list>
				<value>CGV_OnDemandPublishContent</value>
				<value>sys_TouchParentItems</value>
                            <value>CGV_ParentChild</value>
                         </list>
                     </entry> 
                     <entry key="toPublic">
                         <list>
				<value>CGV_OnDemandPublishContent</value>
				<value>sys_TouchParentItems</value>
                            <value>CGV_ParentChild</value>
                         </list>
                     </entry> 
					  <entry key="Reapprove">
                         <list>
				<value>CGV_OnDemandPublishContent</value>
				<value>sys_TouchParentItems</value>
                            <value>CGV_ParentChild</value>
                         </list>
                     </entry> 
					  <entry key="Republish">
                         <list>
				<value>CGV_OnDemandPublishContent</value>
				<value>sys_TouchParentItems</value>
                            <value>CGV_ParentChild</value>
                         </list>
                     </entry> 

                  </map>
              </entry>
          </map>          
       </property> 
    </bean> 

